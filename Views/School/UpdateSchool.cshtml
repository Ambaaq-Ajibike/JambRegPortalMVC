@* @model JambRegistrationMVC.Dtos.SchoolRequestModel *@
<div>
    <form asp-action="UpdateSchool">
        @if(!string.IsNullOrEmpty(ViewBag.Message))
    {
        <p class="alert alertwarning alert dismissible" role="alert">@ViewBag.Message</p>
    }
        <div>
            <label>Name</label>
            <input type="text" name ="Name"/>
        </div>
        <div>
            <label>Address</label>
            <input type="text" name ="Address"/>
        </div>
        <div>
            <input type="submit" style="color: azure" value = "UpdateSchool" class="btn btn-success" required/>
        </div> 
        </form>
        <div>
            <a asp-action = "Index">Exit</a>
        </div>
</div>            