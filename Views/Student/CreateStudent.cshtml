@model JambRegistrationMVC.Dtos.StudentRequestModel
<form asp-action = "CreateStudent" enctype="multipart/form-data">
    <div>
        <div>
            <label>First Name</label>
        <input type="text" name = "FirstName" required/>
        </div>
        <div>
            <label>Last Name</label>
        <input type="text" name = "LastName" required/>
        </div>
        <div>
            <label >Address</label>
        <input type="text" name = "Address" required/>
        </div>
        <div>
            <label >Image</label>
        <input type="file" name ="StudentImage" required/>
        </div>        
        <div>
            <label >Email Address</label>
        <input type="email" name = "Email" required/>
        </div>
            <div>
                <label >Gender</label>
        <input type="text" name = "Gender" />
            </div>
            <div>
                <label >Password</label>
        <input type="password" name = "Password" required/>  
            </div>
        <div>
            <label >DateOfBirth</label>
        <input type="DateTime" name = "DateOfBirth" required/>   
        </div>             
    <div>
            <label>Courses</label>
            <select asp-for="CourseIds" asp-items="ViewBag.Courses" multiple>
                <option selected disabled>Select Course</option>
            </select>
    </div>
    <div>
            <label>Centers</label>
            <select asp-for="CenterIds" asp-items="ViewBag.Centers" multiple>
                <option selected disabled>Select Center</option>
            </select>
    </div>
    <div>
            <label>Subjects</label>
            <select asp-for="SubjectIds" asp-items="ViewBag.Subjects" multiple>
                <option selected disabled>Select Subject</option>
            </select>
    </div>
    <div>
            <label>Schools</label>
            <select asp-for="SchoolIds" asp-items="ViewBag.Schools" multiple>
                <option selected disabled>Select School</option>
            </select>
    </div>
    <div>
        <input type="submit" value="Register" class = "btn btn-primary" required/>
    </div>
    
</form>
